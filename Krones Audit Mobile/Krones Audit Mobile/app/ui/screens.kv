#:kivy 2.3.0

<RootScreen@MDScreen>:
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            id: toolbar
            title: "Auditoria de Instalação"
            elevation: 2
            left_action_items: [["translate", lambda x: app.toggle_language()]]
            right_action_items: [["refresh", lambda x: app.clear_answers()], ["chart-arc", lambda x: None]]

        MDTabs:
            id: tabs
            on_tab_switch: app.on_tab_switch(*args)

        MDBoxLayout:
            adaptive_height: True
            padding: dp(8)
            md_bg_color: 0, 0, 0, 0
            MDLabel:
                id: final_score_label
                text: "Resultado: —"
                halign: "center"
                font_style: "Subtitle1"

    MDFloatLayout:
        MDRoundFlatIconButton:
            text: "Exportar JSON"
            icon: "content-save"
            pos_hint: {"right": 0.98, "y": 0.02}
            on_release: app.ask_save_location()
RootScreen: